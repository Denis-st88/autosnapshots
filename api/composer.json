{
    "name": "denis/autosnapshots",
    "description": "automatic snapshots on schedule",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Denis Stroev",
            "email": "denis.stroev88@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "config": {
      "process-timeout": 0,
      "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "doctrine/annotations": "1.13.2",
        "doctrine/orm": "^2.9",
        "laminas/laminas-config-aggregator": "^1.5",
        "php-di/php-di": "^6.3",
        "ramsey/uuid": "^4.2",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.0",
        "symfony/cache": "6.0.x-dev",
        "symfony/console": "^5.3",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "overtrue/phplint": "8.0.x-dev",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Test\\": "tests/"
      }
    },
    "scripts": {
      "lint": "phplint",
      "cs-check": "phpcs",
      "cs-fix": "phpcbf",
      "psalm": "psalm",
      "test": "phpunit --colors=always",
      "test-coverage": "phpunit --colors=always --coverage-html var/coverage",
      "app": "php bin/app.php --ansi"
    }
}
