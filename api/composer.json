{
    "name": "denis/autosnapshots",
    "description": "automatic snapshots on schedule",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Denis Stroev",
            "email": "denis.stroev88@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "config": {
      "process-timeout": 0,
      "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "php-di/php-di": "^6.3",
        "slim/psr7": "dev-master",
        "slim/slim": "^4.0",
        "symfony/console": "^5.3"
    },
    "require-dev": {
        "overtrue/phplint": "8.0.x-dev",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
      "lint": "phplint",
      "cs-check": "phpcs",
      "cs-fix": "phpcbf",
      "app": "php bin/app.php --ansi"
    }
}
